<div class="flex flex-col items-center">
    <h1 class="font-bold m-0-auto text-2xl mb-4 md:mb-4 text-start w-full">User: <%= @user.name %> </h1>
    <div class="flex flex-col gap-10 justify-center md:flex-row items-center w-full"> 
        <div class="max-w-sm rounded overflow-hidden w-full md:w-48 shadow-xl bg-gradient-to-r from-amaranth-400 to-amaranth-300">
            <div class="px-6 py-4">
            <h2 class="font-bold text-xl mb-2 text-amaranth-50">Total Posts</h2>
            <p class="text-amaranth-50 text-base">
                <%= @user.posts.count %>
            </p>
            </div>
        </div>
        <div class="max-w-sm rounded overflow-hidden w-full md:w-48 shadow-xl bg-gradient-to-r from-amaranth-400 to-amaranth-300">
            <div class="px-6 py-4">
            <h2 class="font-bold text-xl mb-2 text-amaranth-50">Total Likes</h2>
            <p class="text-amaranth-50 text-base">
                <%= @total_likes %>
            </p>
        </div>
    </div>
</div>
<div class="grid grid-cols-1 gap-8 md:grid-cols-2 xl:grid-cols-3 shadow-lg border-gray-50">
    <% @posts.each do |post| %>
        <%= render 'posts/post', post: post,user: @user, minimal_details: true %>
    <% end %>
</div>

