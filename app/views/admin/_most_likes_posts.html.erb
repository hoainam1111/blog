
<tr>
    <td class="px-4 py-4 text-sm font-medium whitespace-nowrap">
        <div>
            <h2 class="font-medium text-gray-800 dark:text-white hover:text-blue-400">
                <%= link_to post_path(post) do %>
                    <%= post.title %>
                <% end %>
            </h2>
            <p class="text-sm font-normal text-gray-600 dark:text-gray-400">Likes: <%= post.likes_count %></p>
        </div>
    </td>
    <td class="px-12 py-4 text-sm font-medium whitespace-nowrap">
        <div class="inline px-3 py-1 text-sm font-normal rounded-full text-emerald-500 gap-x-2 bg-emerald-100/60 dark:bg-gray-800">
            <%= post.user.name %>
        </div>
    </td>
    <td class="px-4 py-4 text-sm whitespace-nowrap">
        <div>
            <h4 class="text-gray-700 dark:text-gray-200"><%= post.title %></h4>
            <p class="text-gray-500 dark:text-gray-400"><%= post.content.to_plain_text.truncate(60) %></p>
        </div>
    </td>
    <td class="px-4 py-4 text-sm whitespace-nowrap">
        <div class="flex items-center">
            <% if post.category %>
                <%= link_to admin_category_path(post.category), class: "hover:text-blue-400" do %>
                    <%= post.category.name %>
                <% end %>
            <% else %>
                No category
            <% end %>
        </div>
    </td>

    <td class="px-4 py-4 text-sm whitespace-nowrap">
        <div>
            <% if post.picture.present? %>
                <%= image_tag post.picture, class: "w-24 h-24 object-cover" %>
            <% end %>
        </div>
    </td>

    <td class="px-4 py-4 text-sm whitespace-nowrap">
        <button class="px-1 py-1 text-gray-500 transition-colors duration-200 rounded-lg dark:text-gray-300 hover:bg-gray-100">
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
                <path stroke-linecap="round" stroke-linejoin="round" d="M12 6.75a.75.75 0 110-1.5.75.75 0 010 1.5zM12 12.75a.75.75 0 110-1.5.75.75 0 010 1.5zM12 18.75a.75.75 0 110-1.5.75.75 0 010 1.5z" />
            </svg>
        </button>
    </td>
</tr>


        
